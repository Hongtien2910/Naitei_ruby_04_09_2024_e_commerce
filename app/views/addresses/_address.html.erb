<div class="mx-auto bg-white shadow-md rounded-lg overflow-hidden my-4 flex">
  <div class="px-6 flex-1">
    <div class="mb-4 flex gap-2">
      <h3 class="text-gray-700 font-semibold"><%= t ".receiver_name" %>:</h3>
      <p class="text-gray-600"><%= address.receiver_name %></p>
    </div>
    <div class="mb-4 flex gap-2">
      <h3 class="text-gray-700 font-semibold"><%= t ".address" %>:</h3>
      <p class="text-gray-600"><%= address.place %></p>
    </div>
    <div class="mb-4 flex gap-2">
      <h3 class="text-gray-700 font-semibold"><%= t ".phone" %>:</h3>
      <p class="text-gray-600"><%= address.phone %></p>
    </div>
  </div>
  <div class="flex flex-col p-4">
    <div class="flex flex-col p-4">
      <%= link_to edit_user_address_path(@user, address), class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" do %>
        <i class="fa-solid fa-pen-to-square"></i>
      <% end %>
      <%= link_to user_address_path(@user, address), data: { "turbo-method": :delete, turbo_confirm: t(".delete_confirm")}, class: "px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600" do %>
        <i class="fa-solid fa-trash"></i>
      <% end %>
    </div>
  </div>
</div>
