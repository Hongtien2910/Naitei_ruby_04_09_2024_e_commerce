<%= form_with model: [ @user, @address ],html: { class: "mx-auto w-[500px]" } do |f| %>
  <div class="flex flex-col gap-3">
    <%= render "shared/error_messages", object: @address %>
    <%= f.label :receiver_name, t(".receiver_name"), class: "font-bold" %>
    <%= f.text_field :receiver_name, class: "rounded-lg" %>
    <%= f.label :place, t(".place"), class: "font-bold" %>
    <%= f.text_field :place, class: "rounded-lg" %>
    <%= f.label :phone, t(".phone"), class: "font-bold" %>
    <%= f.telephone_field :phone, class: "rounded-lg" %>
    <div class="flex gap-1 items-center">
      <%= f.check_box :default, class: "rounded-lg" %>
      <%= f.label :default, t(".default"), class: "font-bold" %>
    </div>
    <button type="submit" class="rounded-lg px-4 py-2  bg-primary text-white hover:opacity-70 text-lg flex items-center justify-center">
      <%= f.submit %>
    </button>
  </div>
<% end %>
