<div class="h-full ml-14 mb-10 md:ml-64" style="padding-top: 110px;">
  <h1 class="text-3xl font-bold mb-6 text-center"><%= t "admin.categories_admin.show.title", category_name: @category.name %></h1>

  <div class="bg-white p-6 rounded-lg shadow-md mb-6">
    <h2 class="text-xl font-semibold mb-4 border-b pb-2"><%= t "admin.categories_admin.show.category_info" %></h2>
    <p class="font-medium mb-2"><strong><%= t "admin.categories_admin.show.name" %>:</strong> <%= @category.name %></p>
    <p class="font-medium mb-2"><strong><%= t "admin.categories_admin.show.products" %>:</strong> <%= @category.products_count %></p>
    <p class="font-medium mb-2"><strong><%= t "admin.categories_admin.show.created_at" %>:</strong> <%= @category.created_at.strftime("%d-%m-%Y") %></p>
  </div>

  <div class="bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-xl font-semibold mb-4 border-b pb-2"><%= t "admin.categories_admin.show.products_in_category" %></h2>

    <% if @category.products.any? %>
      <table class="min-w-full divide-y divide-gray-200">
        <thead>
          <tr>
            <th class="py-3 px-6 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.products_admin.index.id") %></th>
            <th class="py-3 px-6 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.products_admin.index.name") %></th>
            <th class="py-3 px-6 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.products_admin.index.category") %></th>
            <th class="py-3 px-6 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.products_admin.index.price") %></th>
            <th class="py-3 px-6 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.products_admin.index.stock") %></th>
            <th class="py-3 px-6 text-center text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.products_admin.index.actions") %></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @category.products.each_with_index do |product_item, index| %>
            <%= render partial: "product_item", locals: { product_item: product_item, index: index + 1 } %>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-center text-gray-500"><%= t "admin.categories_admin.show.no_products" %></p>
    <% end %>
  </div>

  <div class="mt-6 flex justify-end space-x-4">
    <%= link_to t("admin.categories_admin.show.edit"), edit_admin_category_path(@category), class: "bg-primary hover:bg-primary_hover text-white font-bold py-2 px-4 rounded-lg" %>
    <%= link_to t("admin.categories_admin.show.back"), admin_categories_path, class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded-lg" %>
  </div>
</div>
