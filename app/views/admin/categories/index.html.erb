<div class="h-full ml-14 mb-10 md:ml-64" style="padding-top: 110px;">
  <h1 class="text-3xl font-bold mb-6"><%= t "admin.categories_admin.index.title" %></h1>
  <div class="flex justify-end items-center mb-4">
    <%= link_to t("admin.categories_admin.index.new"), new_admin_category_path, class: "bg-primary text-white py-2 px-4 rounded-lg hover:bg-primary_hover" %>
  </div>
  <div class="mb-4 flex justify-between items-center">
    <div>
      <%= link_to t("admin.categories_admin.index.sort_by_id"), admin_categories_path(sort: "id", direction: params[:direction] == "asc" ? "desc" : "asc"), class: "mr-4 text-primary hover:underline" %>
      <%= link_to t("admin.categories_admin.index.sort_by_name"), admin_categories_path(sort: "name", direction: params[:direction] == "asc" ? "desc" : "asc"), class: "mr-4 text-primary hover:underline" %>
      <%= link_to t("admin.categories_admin.index.sort_by_created_at"), admin_categories_path(sort: "created_at", direction: params[:direction] == "asc" ? "desc" : "asc"), class: "text-primary hover:underline" %>
    </div>
  </div>
  <table class="min-w-full bg-white border rounded-lg shadow-md overflow-hidden table-fixed">
    <thead>
      <tr class="bg-primary text-white uppercase text-sm leading-normal">
        <th class="py-3 px-6 text-left w-1/12"><%= t "admin.categories_admin.index.category_id" %></th> 
        <th class="py-3 px-6 text-left w-3/12"><%= t "admin.categories_admin.index.name" %></th> 
        <th class="py-3 px-6 text-center w-2/12"><%= t "admin.categories_admin.index.products" %></th> 
        <th class="py-3 px-6 text-left w-2/12"><%= t "admin.categories_admin.index.created_at" %></th> 
        <th class="py-3 px-6 text-center w-2/12"><%= t "admin.categories_admin.index.actions" %></th> 
      </tr>
    </thead>
    <tbody class="text-gray-600 text-sm font-light">
      <% @categories.each_with_index do |category, index| %>
        <%= render partial: "admin/categories/category_item", locals: { category: category, index: index + 1 } %>
      <% end %>
    </tbody>
  </table>
  <%= render "pagy/pagy_nav", pagy: @pagy %>
</div>
