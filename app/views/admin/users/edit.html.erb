<div class="h-full ml-14 mb-10 md:ml-64" style="padding-top: 110px;">
  <h1 class="text-4xl font-bold text-gray-800 mb-8 text-center">
    <%= t("admin.users_admin.edit.title", user_id: @user.id) %>
  </h1>
  <%= form_with(model: [:admin, @user], local: true) do |f| %>
    <div class="bg-white p-8 rounded-lg shadow-md mb-8">
      <h2 class="text-2xl font-semibold text-gray-700 mb-6 border-b pb-2">
        <%= t("admin.users_admin.edit.info_title") %>
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <div class="mb-4">
            <%= f.label :user_name, t("admin.users_admin.edit.user_name"), class: "font-medium mb-2" %>
            <%= f.text_field :user_name, class: "block mt-2 w-full border border-gray-300 rounded-lg px-3 py-2" %>
          </div>
          <div class="mb-4">
            <%= f.label :email, t("admin.users_admin.edit.email"), class: "font-medium mb-2" %>
            <%= f.email_field :email, class: "block mt-2 w-full border border-gray-300 rounded-lg px-3 py-2" %>
          </div>
          <div class="mb-4">
            <%= f.label :activated, t("admin.users_admin.edit.activated"), class: "font-medium mb-2" %>
            <%= f.check_box :activated, class: "mt-2" %>
          </div>
        </div>
        <div>
          <div class="mb-4">
            <%= f.label :role, t("admin.users_admin.edit.role"), class: "font-medium mb-2" %>
            <p class="block mt-2 w-full border border-gray-300 rounded-lg px-3 py-2 bg-gray-200"><%= t("admin.users_admin.edit.roles.#{@user.role}") %></p>
          </div>
          <div class="mb-4">
            <p class="font-medium mb-2"><strong><%= t "admin.users_admin.edit.created_at" %>:</strong> <%= @user.created_at.strftime("%d/%m/%Y") %></p>
            <p class="font-medium mb-2"><strong><%= t "admin.users_admin.edit.updated_at" %>:</strong> <%= @user.updated_at.strftime("%d/%m/%Y") %></p>
          </div>
        </div>
      </div>
    </div>
    <div class="mt-8 flex justify-end space-x-4">
      <%= link_to t("admin.users_admin.edit.cancel"), admin_users_path, class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-3 px-6 rounded-lg shadow-md" %>
      <%= f.submit t("admin.users_admin.edit.update"), class: "bg-primary hover:bg-primary_hover text-white font-bold py-3 px-6 rounded-lg shadow-md" %>
    </div>
  <% end %>
</div>
