<div class="h-full ml-14 mb-10 md:ml-64" style="padding-top: 110px;">
  <h1 class="text-3xl font-bold mb-6 text-center"><%= t "admin.users_admin.show.title", user_id: @user.id %></h1>

  <div class="bg-white p-6 rounded-lg shadow-md mb-6">
    <h2 class="text-xl font-semibold mb-4 border-b pb-2"><%= t "admin.users_admin.show.user_info" %></h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <p class="font-medium mb-2"><strong><%= t "admin.users_admin.show.user_name" %>:</strong> <%= @user.user_name %></p>
        <p class="font-medium mb-2"><strong><%= t "admin.users_admin.show.email" %>:</strong> <%= @user.email %></p>
        <p class="font-medium mb-2"><strong><%= t "admin.users_admin.show.role" %>:</strong> <%= @user.role.present? ? t("admin.users_admin.show.roles.#{@user.role}", default: @user.role) : "" %></p>
        <p class="font-medium mb-2"><strong><%= t "admin.users_admin.show.activated" %>:</strong> <%= @user.activated? ? t("admin.users_admin.index.activated") : t("admin.users_admin.index.inactivated") %></p>
        <p class="font-medium mb-2"><strong><%= t "admin.users_admin.show.created_at" %>:</strong> <%= @user.created_at.strftime("%d/%m/%Y") %></p>
        <p class="font-medium mb-2"><strong><%= t "admin.users_admin.show.updated_at" %>:</strong> <%= @user.updated_at.strftime("%d/%m/%Y") %></p>
      </div>
    </div>
  </div>

  <div class="mt-6 flex justify-end space-x-4">
    <%= link_to t("admin.users_admin.show.edit"), edit_admin_user_path(@user), class: "bg-primary hover:bg-primary_hover text-white font-bold py-2 px-4 rounded-lg" %>
    <%= link_to t("admin.users_admin.show.back"), admin_users_path, class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded-lg" %>
  </div>
</div>
