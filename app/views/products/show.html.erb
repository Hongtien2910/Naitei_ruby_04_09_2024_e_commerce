<% provide :title, @product.name %>
<div class="container mx-auto">
  <div class="grid grid-cols-12 gap-10">
    <div class="col-span-4">
      <%= image_tag @product.img_url, alt: @product.name, class: "w-full h-96 object-cover rounded-lg" %>
    </div>
    <div class="col-span-8">
      <h2 class="text-3xl font-bold"><%= @product.name %></h2>
      <div class="flex gap-2 mt-5">
        <%= render "rating", rating: @product.rating %>
        <span class="text-gray-700 ml-2"><%= @product.rating %></span>
      </div>
      <p class="text-xl mt-5 font-semibold">$<%= @product.price %></p>
      <p class="text-gray-700 mt-5"><%= @product.desc %></p>
      <div class="mt-10">
        <%= render "cart_form" %>
      </div>
    </div>
  </div>
  <div class="mt-[50px]">
    <h2 class="text-2xl font-bold text-primary"><%= t ".user_review" %></h2>
    <div class="flex gap-3 items-center mt-3">
      <p class="text-2xl font-bold"><%= @product.rating %></p>
      <%= render "rating", rating: @product.rating %>
    </div>
    <p class="text-base"><%= @reviews_count %> <%= t ".review" %></p>
    <div>
      <%= render partial: "products/review", collection: @reviews %>
      <%== pagy_nav @pagy if @pagy.pages > 1 %>
    </div>
  </div>
</div>
