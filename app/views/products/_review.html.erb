<div class="bg-white p-5">
  <div class="flex items-center">
    <%= user_avatar review.user, class: "w-10 h-10 rounded-full" %>
    <div class="ml-3">
      <h3 class="text-lg font-semibold"><%= review.user.user_name %></h3>
      <div class="flex items-center gap-2">
        <div class="flex">
          <%= review_star_rating(review.rating || 0) %>
        </div>
        <p class="text-gray-500 text-sm"><%= review.created_at %></p>
      </div>
    </div>
  </div>
  <div class="mt-4">
    <p class="text-gray-800 mt-2">
      <%= review.comment %>
    </p>
  </div>
</div>
