<div class="bg-white">
  <main class="my-8">
    <div class="container mx-auto px-6">
      <h2 class="text-gray-700 text-2xl font-medium"><%= t".title" %> </h2>
      <span class="mt-3 text-lg text-gray-500"><%= @product_count %> <%= t".book" %></span>
    </div>
    <div class="mt-16">
      <div class="grid gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 mt-6">
        <%= render partial: "product", collection: @products , pagy: @pagy %> 
      </div>
      <nav class="mt-6 flex justify-center">
        <%= render 'pagy/pagy_nav', pagy: @pagy %>
      </nav>
    </div>
  </main>
</div>
