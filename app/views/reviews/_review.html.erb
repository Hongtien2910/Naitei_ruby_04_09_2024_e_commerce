<div class="bg-white p-5">
  <div class="flex items-center">
    <%= user_avatar(@user, class: "w-10 h-10 rounded-full") %>
    <div class="ml-3">
      <h3 class="text-lg font-semibold"><%= user_review.user.user_name %></h3>
      <div class="flex items-center gap-2">
        <div class="flex">
          <%= review_star_rating(user_review.rating || 0) %>
        </div>
        <p class="text-gray-500 text-sm"><%= user_review.created_at %></p>
      </div>
    </div>
  </div>
  <div class="mt-4">
    <p class="text-gray-800 mt-2">
      <%= user_review.comment %>
    </p>
  </div>
  <% if current_user? user_review.user %>
    <div class="mt-4 flex gap-2">
      <%= link_to edit_user_order_product_review_path(current_user, order, product, user_review), class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" do %>
        <i class="fa-solid fa-pen-to-square"></i>
      <% end %>
      <%= link_to user_order_product_review_path(current_user, order, product, user_review), data: { "turbo-method": :delete, turbo_confirm: t("reviews.delete_confirm")}, class: "px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600" do %>
        <i class="fa-solid fa-trash"></i>
      <% end %>
    </div>
  <% end %>
</div>
