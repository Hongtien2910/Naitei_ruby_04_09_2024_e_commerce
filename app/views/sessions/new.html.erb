<% provide :title, t(".login") %>
<h1 class="text-center text-2xl font-bold"><%= t ".login" %></h1>
<div class="flex flex-col justify-center items-center mt-5">
  <%= form_for :session, html: { class: "flex flex-col justify-center gap-3 w-[350px]" }, url: login_path do |f| %>
    <div class="flex flex-col w-full">
      <%= f.label :email, class: "text-lg font-bold" %>
      <%= f.email_field :email%>
    </div>
    <div class="flex flex-col w-full">
      <%= f.label t ".password", class: "text-lg font-bold" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="flex flex-col w-full">
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t ".remember_me" %></span>
      <% end %>
    </div>
    <button type="submit" class="px-4 py-2  bg-primary text-white rounded-sm hover:opacity-70 text-lg flex items-center justify-center">
      <%= t ".login" %>
    </button>
  <% end %>
<p class="mt-4">
    <%= t ".new_user?" %>
    <%= link_to t(".sign_up_now"), new_user_path, class: "text-primary font-bold hover:underline" %>
  </p>
</div>
