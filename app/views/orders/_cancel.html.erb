<%= form_with model: @order, url: cancel_user_order_path(@user, @order), method: :patch do |f| %>
  <div class="flex flex-col gap-2">
    <%= f.label :cancel_reason, t(".reason_for_cancellation"), class: "font-bold" %>
    <%= f.text_area :cancel_reason, value: "", class: "border-primary border rounded-lg" %>
  </div>
  <button type="submit" class="mt-2 rounded-lg px-4 py-2  bg-primary text-white hover:opacity-70 text-lg flex items-center justify-center">
    <%= t ".cancel" %>
  </button>
<% end %>
