<%= link_to category_path(category), class: "flex items-center justify-between w-full p-4 lg:rounded-full md:rounded-full hover:bg-gray-100 cursor-pointer border-2 rounded-lg border-gray-300" do %>
  <div class="lg:flex md:flex items-center">
    <div class="h-16 w-16 mb-2 lg:mb-0 border md:mb-0 rounded-full mr-4 bg-primary"></div>
    <div class="flex flex-col">
      <div class="text-xl leading-5 text-gray-700 font-bold w-full"><%= category.name %></div>
      <div class="text-lg text-gray-600 w-full"><%= pluralize(category.products.count, t('.product', count: category.products.count)) %></div>
    </div>
  </div>
  <svg class="h-8 w-8 mr-2 invisible md:visible lg:visible xl:visible" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0-01-1.414 0z" clip-rule="evenodd" />
  </svg>
<% end %>
