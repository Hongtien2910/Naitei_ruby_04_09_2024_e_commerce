<h2 class="text-center text-2xl font-bold"><%= t(".title") %></h2>
<div class="flex flex-col justify-center items-center mt-5">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "flex flex-col justify-center gap-3 w-[350px]" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
    <div class="field flex flex-col w-full">
      <%= f.label :password, t(".password"), class: "text-lg font-semibold" %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
    </div>
    <div class="field flex flex-col w-full">
      <%= f.label :password_confirmation, t(".password_confirmation"), class: "text-lg font-semibold" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <div class="actions px-4 py-2 bg-primary text-white rounded-sm hover:opacity-70 text-lg flex items-center justify-center">
      <%= f.submit t(".change") %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
