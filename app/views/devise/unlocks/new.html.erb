<h2 class="text-center text-2xl font-bold"><%= t(".title") %></h2>
<div class="flex flex-col justify-center items-center mt-5">
  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: "flex flex-col justify-center gap-3 w-[350px]" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field flex flex-col w-full">
      <%= f.label :email, class: "text-lg font-semibold" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="actions px-4 py-2 bg-primary text-white rounded-sm hover:opacity-70 text-lg flex items-center justify-center">
      <%= f.submit t(".send_instructions") %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
