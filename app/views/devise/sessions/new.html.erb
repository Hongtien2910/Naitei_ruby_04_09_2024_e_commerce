<% provide :title, t(".login") %>
<h1 class="text-center text-2xl font-bold"><%= t ".login" %></h1>
<div class="flex flex-col justify-center items-center mt-5">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "flex flex-col justify-center gap-3 w-[350px]" }) do |f| %>
    <div class="flex flex-col w-full">
      <%= f.label :email, class: "text-lg font-bold" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="flex flex-col w-full">
      <%= f.label :password, class: "text-lg font-bold" %>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="flex items-center gap-2">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, t(".remember_me") %>
      </div>
    <% end %>
    <div class="actions px-4 py-2  bg-primary text-white rounded-sm hover:opacity-70 text-lg flex items-center justify-center">
      <%= f.submit t(".login") %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
