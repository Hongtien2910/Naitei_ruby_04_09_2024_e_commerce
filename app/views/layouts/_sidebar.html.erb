<div class="fixed flex flex-col top-[72px] left-0 w-14 hover:w-64 md:w-64 bg-primary h-full text-white transition-all duration-300 border-none z-10 sidebar">
  <div class="overflow-y-auto overflow-x-hidden flex flex-col justify-between flex-grow">
    <ul class="flex flex-col py-4 space-y-1">
      <li class="px-5 hidden md:block">
        <div class="flex flex-row items-center h-8">
          <div class="text-sm font-light tracking-wide text-gray-400 uppercase"><%= t "admin.sidebar.main" %></div>
        </div>
      </li>
      <li>
  <%= link_to admin_dashboard_path, class: "relative flex flex-row items-center h-11 focus:outline-none hover:bg-primary_hover text-white-600 hover:text-white-800 border-l-4 #{active_class(admin_dashboard_path)} pr-6" do %>
    <span class="inline-flex justify-center items-center ml-4">
      <i class="fas fa-tachometer-alt"></i> 
    </span>
    <span class="ml-2 text-sm tracking-wide truncate"><%= t "admin.sidebar.dashboard" %></span>
  <% end %>
</li>
<li>
  <%= link_to admin_categories_path, class: "relative flex flex-row items-center h-11 focus:outline-none hover:bg-primary_hover text-white-600 hover:text-white-800 border-l-4 #{active_class(admin_categories_path)} pr-6" do %>
