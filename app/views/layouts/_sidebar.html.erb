    <span class="inline-flex justify-center items-center ml-4">
      <i class="fas fa-star"></i> 
    </span>
    <span class="ml-2 text-sm tracking-wide truncate"><%= t "admin.sidebar.reviews" %></span>
  <% end %>
</li>

    </ul>
    <p class="mb-14 px-5 py-3 hidden md:block text-center text-xs"><%= t "admin.sidebar.copyright" %></p>
  </div>
</div>
