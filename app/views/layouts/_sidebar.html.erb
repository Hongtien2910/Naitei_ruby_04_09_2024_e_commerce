      <i class="fas fa-list-alt"></i> 
    </span>
    <span class="ml-2 text-sm tracking-wide truncate"><%= t "admin.sidebar.category" %></span>
  <% end %>
</li>
<li>
  <%= link_to admin_products_path, class: "relative flex flex-row items-center h-11 focus:outline-none hover:bg-primary_hover text-white-600 hover:text-white-800 border-l-4 #{active_class(admin_products_path)} pr-6" do %>
